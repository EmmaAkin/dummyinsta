<div class="image center-block">
    <%= link_to (image_tag @post.image.url(:medium)), class:"img-responsive" %>
</div>


<div class="form-wrapper">


<%= form_for @post,  html: { class: 'form-horizontal', multipart: true } do |f| %>


    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>

    <div class="form-group text-center">
      <%= f.label :content %><br>
      <%= f.text_field :content %>
    </div>


    <div class="form-group text-center">
      <%= f.submit  class:"btn-success"%>
    </div>

    <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }%>



<% end %>

</div>